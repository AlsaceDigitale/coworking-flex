{% extends 'admin_base.html.twig' %}

{% block title %}Remise à zéro{% endblock %}

{% block body %}



    <div class="container" align="center">
        <h1 class="text-warning">Remise à zéro des cotisations</h1>

        <button type="button" class="btn btn-warning" id="raz" data-toggle="modal" data-target="#exampleModal">
            <img src="../../assets/images/boom.png" width="50%" alt="boom">
        </button>

        <div class="modal fade"  id="exampleModal" style="margin-top: 15%" >
            <div class="modal-dialog" role="document" >
                <div class="modal-content">
                    <div class="modal-body">
                        <h3>Êtes-vous sûr de vouloir remettre les cotisations à zéro ?</h3>
                    </div>
                    <div class="modal-footer" style="justify-content: space-between">
                        <button type="button" class="btn btn-block btn-lg btn-primary" data-dismiss="modal">Non</button>
                        <a href="{{ path('admin_boom') }}" >
                            <button type="button" class="btn btn-danger btn-lg">Oui</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <a href="{{ path('admin_home') }}" class="btn btn-primary btn-lg active mt-5" role="button" aria-pressed="true">Retour</a>




    </div>

{% endblock %}
